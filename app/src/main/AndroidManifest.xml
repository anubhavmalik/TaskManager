<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anubhav.taskmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_todo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Details.ToDoDetails"
            android:label="Details" />
        <activity
            android:name=".Details.ScrollingDetailsActivity"
            android:label="Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Resources.aboutscrollingactivity"
            android:label="About"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Resources.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".Reciever.AlarmReceiver" />
    </application>

</manifest>